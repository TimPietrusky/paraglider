-
  const timestamp = Date.now()
  const currentYear = (new Date()).getFullYear()
  const layout = data.styles['demo/layout.css']
  const slideshow = data.styles['demo/slideshow.css']
  const local = data.styles[`demo/${data.file}.css`]
doctype
html
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no")
    title= `${data.fileName} | ${data.name} | ${data.description}`
    link(rel="icon"  type="image/png"  href="favico.png")
    link(rel="stylesheet" href=`${data.fileName}.css?${timestamp}`)
    block head
  body
    header(class=layout.header)
      h1
        a(href="index.html")= data.name
      nav(class=layout.nav)
        -
          const files = data.files.filter(x => x !== 'index')
                                  .sort((a, b) => b[0] - a[0])
        each file in files
          -
            const name = file.split('')
                             .map((x, i) => i === 0 ? x.toUpperCase() : x)
                             .join('')
          a(href=`${file}.html` class=layout.link)= name
    main(class=layout.main)
      block main
    footer(class=layout.footer)
      p= `Copyright Â© ${currentYear} by Gregor Adams`
    block scripts
    script(src=`${data.fileName}.js?${timestamp}`)
