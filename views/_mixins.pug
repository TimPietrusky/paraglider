

mixin arrow(dir)
  if dir == 'next'
    svg(style="width:1em;height:1em" viewBox="0 0 24 24")
      path(fill="currentcolor" d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z")
  else if dir == 'prev'
    svg(style="width:1em;height:1em" viewBox="0 0 24 24")
       path(fill="currentcolor" d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z")

mixin pagers()
  nav(class=classNames(styles.pagers))
    a(href='#' class=classNames(styles.prev, styles.jsPrev))
      +arrow('prev')
    a(href='#' class=classNames(styles.next, styles.jsNext))
      +arrow('next')

mixin dots(n)
  nav(class=classNames(styles.dots))
    - counter = 0
    while ++counter <= n
      a(href='#' class=classNames(styles.dot, styles.jsDot))

mixin slides(n, prefix)
  section(class=classNames(styles.slides, styles.jsWrapper))
    - let counter = 0
    while ++counter <= n
      article(class=classNames(styles.slide, styles.jsSlide) style={'background-image': `url("assets/${prefix}${(counter % 5) + 1}.jpg")`})
        if block
          block
